set nocompatible
set encoding=utf-8
set history=50

" Indenting
set autoindent
set cindent
set smartindent

" Tab
set expandtab
set sw=4
set ts=4

set backspace=indent,eol,start
set cursorline
set colorcolumn=79
set nu
set ruler
set showcmd
syntax on

set hlsearch
set incsearch
set showmatch
set ignorecase
set smartcase
